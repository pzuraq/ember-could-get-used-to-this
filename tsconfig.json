{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "experimentalDecorators": true,
    "paths": {
      "dummy/tests/*": [
        "tests/*"
      ],
      "dummy/*": [
        "tests/dummy/app/*",
        "app/*"
      ],
      "ember-could-get-used-to-this": [
        "addon"
      ],
      "ember-could-get-used-to-this/*": [
        "addon/*"
      ],
      "ember-could-get-used-to-this/test-support": [
        "addon-test-support"
      ],
      "ember-could-get-used-to-this/test-support/*": [
        "addon-test-support/*"
      ],
      "*": [
        "types/*"
      ],
    },
    // Prevents the inclusion of `@types/node`.
    // https://github.com/microsoft/TypeScript/issues/18588#issuecomment-704482601
    "types": []
  },
  "include": [
    "app/**/*",
    "addon/**/*",
    "tests/**/*",
    "types/**/*",
    "test-support/**/*",
    "addon-test-support/**/*"
  ]
}
